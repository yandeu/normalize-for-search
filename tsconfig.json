{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
